<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wallet.Views.AboutPage"
             xmlns:vm="clr-namespace:wallet.ViewModels"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout Spacing="10">
            <Button Text="Scan QR Code"
                    x:Name="btnScan"
                    Clicked="btnScan_Clicked"/>
            <Entry x:Name="txtBarCode"
                   Placeholder="Text Do Scan"/>
            <Entry x:Name="txtAmount"
                   Placeholder="price"/>
            <Button Text="Pay"
                    x:Name="btnPay"
                    Clicked="BtnPay_Clicked"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
